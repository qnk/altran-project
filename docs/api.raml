mediaType:  application/json
/users:
    /{userId}:
        description: Get user data filtered by user id. Can be accessed by users with role "users" and "admin"
        type: collection
        get: 
            responses:
                200:
                    body:
                        application/json:
                            example: !include user-body.sample
                500:
                    body:
                        application/json:
                            example: |
                                {
                                    "message": Internal error recovering projects
                                }
    /{userName}:
        description: Get user data filtered by user name. Can be accessed by users with role "users" and "admin"
        type: collection
        get:
            responses:
                200:
                    body:
                        application/json:
                            example: !include user-body.sample
                500:
                    body:
                        application/json:
                            example: |
                                {
                                    "message": Internal error recovering projects
                                }
    /policies/{policyNumber}:
        description: Get the list of policies linked to a user name. Can be accessed by users with role "admin"
        type: collection
        get:
            responses:
                200:
                    body:
                        application/json:
                            example: !include policies-body.sample
                500:
                    body:
                        application/json:
                            example: |
                                {
                                    "message": Internal error recovering projects
                                }
/policies/users/name:
    /{userName}:
        description: Get the user linked to a policy number. Can be accessed by users with role admin
        type: collection
        get:
            responses:
                200:
                    body:
                        application/json:
                            example: !include policies-body.sample
                500:
                    body:
                        application/json:
                            example: |
                                {
                                    "message": Internal error recovering projects
                                }